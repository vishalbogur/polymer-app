{
  "entrypoint": "index.html",
  "shell": "src/my-app.html",
  "fragments": [
    "src/my-personalinfo.html",
    "src/my-experience.html",
    "src/my-technologies.html",
    "src/my-attributes.html",
    "src/my-interests.html",
    "src/my-skillmatrix.html",
    "src/my-contact.html",
    "src/my-view404.html"
  ],
  "sources": [
    "images/**/*",
    "src/**/*",
    "data/**/*"
  ],
  "extraDependencies": [
    "bower_components/webcomponentsjs/*.js",
    "!bower_components/webcomponentsjs/gulpfile.js",
    "manifest.json"
  ],
  "lint": {
    "rules": ["polymer-2"]
  },
  "builds": [
    {
      "preset": "es5-bundled"
    },
    {
      "preset": "es6-bundled"
    },
    {
      "preset": "es6-unbundled"
    }
  ]
}
